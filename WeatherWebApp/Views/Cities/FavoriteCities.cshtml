
@{

}

<div class="jumbotron">
    Favorite Cities
    <li class="list-group-item">
        <div class="row">
            <div class="col-md-4">
                <button type="button" class="btn btn-default btn-block" onclick="location.href = '@Url.Action("WatchLog", "Cities")'">
                    Watch Log
                </button>
            </div>
        </div>
        @foreach (var city in ViewBag.FavoriteCities)
            {
            <div class="row">
                <div class="col-md-3">
                    <h3>@city.Name</h3>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("Delete", "Cities", new {cityid = city.Id})"> <img src="@Url.Content("~/Content/Images/cross.png")" /></a>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-4">
                <div class="text-center">
                    <div class="container-fluid">

                        @model WeatherWebApp.Models.City
                        @using (Html.BeginForm("AddCity", "Cities", FormMethod.Post, new { Class = "form-horizontal" }))
                        {
                            <div class="form-group">
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.Name, new { Class = "form-control input-lg", placeholder = "Enter city name" })
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>
                                <div class="col-sm-6">
                                    <input type="submit" class="btn btn-default btn-lg btn-block" value="Add">
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <button type="button" class="btn btn-default btn-block" onclick="location.href = '@Url.Action("Index", "Home")'">
                Back
            </button>
        </div>
    </li>

</div>